rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read, write, and delete documents in their own "users/{uid}" space.
    // This rule allows them to manage their own document and all subcollections within it.
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
