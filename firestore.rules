rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{uid} {
      // A user can read, update, and delete their own user document.
      // Anyone can create a user document during signup.
      allow read, update, delete: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null;

      // Rules for the 'employees' subcollection
      match /employees/{employeeId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
        
        // Rules for time entries within an employee
        match /timeEntries/{timeEntryId} {
          allow read, write: if request.auth != null && request.auth.uid == uid;
        }
      }

      // Rules for the 'payrolls' subcollection
      match /payrolls/{payrollId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Rules for the 'customHolidays' subcollection
      match /customHolidays/{holidayId} {
        // A user can perform all operations on their own custom holidays.
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Rules for the 'reminders' subcollection
      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
