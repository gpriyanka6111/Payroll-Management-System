
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, update, delete: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null;
      
      // Allow users to manage their own employees
      match /employees/{employeeId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Allow users to manage their own time entries
      match /employees/{employeeId}/timeEntries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Allow users to manage their own payrolls
      match /payrolls/{payrollId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Allow users to manage their own reminders
      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Allow users to manage their own custom holidays
      match /customHolidays/{holidayId} {
        allow create: if request.auth != null
          && request.auth.uid == uid
          && request.resource.data.name is string
          && request.resource.data.date is timestamp;
        
        allow read, update, delete: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
