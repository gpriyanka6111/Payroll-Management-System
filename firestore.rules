rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own user document.
    match /users/{uid} {
      allow read, update, delete: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null;

      // Users can fully manage their own subcollections like 'employees', 'reminders', etc.
      match /{collection}/{docId} {
        allow list, read, create, update, delete: if request.auth != null && request.auth.uid == uid;
      }

      // Deeper subcollections, like 'timeEntries' within an employee document.
      match /{collection}/{docId}/{subCollection}/{subDocId} {
         allow list, read, create, update, delete: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
