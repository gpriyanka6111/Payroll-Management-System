
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, write, update, and delete their own documents.
    // The {userId} wildcard captures the user's unique ID from the path.
    // request.auth.uid is the unique ID of the user making the request.
    // This rule ensures they must match.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
